<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @route.name %>
</p>
<!--<p>-->
<!--  <strong> On the Station -  </strong>-->
  <%#= @route.current_station.present? ? @route.current_station.title : "No route"  %>
<!--</p>-->
<p>
  <table>
    <thead>
    <tr>
      <td width="100px">Name</td>
      <td>Position</td>
    </tr>
    </thead>
    <tbody>
    <% @route.railway_stations.ordered.each do |rs| %>
      <tr>
        <td><%= rs.title %></td>
        <td>
          <%= form_tag update_position_railway_station_path(rs), method: :patch do %>
            <%= number_field_tag :position, rs.position_in(@route) %>
            <%= hidden_field_tag :route_id, @route.id %>
            <%= submit_tag "Change!"%>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</p>

<%= link_to 'Edit', edit_route_path(@route) %> |
<%= link_to 'Back', routes_path %>
