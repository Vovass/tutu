<h1>New Carriage</h1>

<%= form_for [@train, @carriage] do |f| %>
    <div class="field">
      <%= f.label :number %><br>
      <%= f.text_field :number %><br>
    </div>

  <div class="field">
    <%= f.label :top_seats %><br>
    <%= f.text_field :top_seats %><br>
  </div>

  <div class="field">
    <%= f.label :bottom_seats %><br>
    <%= f.text_field :bottom_seats %><br>
  </div>

  <div class="field">
    <%= f.label :side_top_seats %><br>
    <%= f.text_field :side_top_seats %><br>
  </div>

  <div class="field">
    <%= f.label :side_bottom_seats %><br>
    <%= f.text_field :side_bottom_seats %><br>
  </div>

  <div class="field">
    <%= f.submit "Create" %><br>
  </div>
<% end %>